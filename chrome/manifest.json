{
  "manifest_version": 3,
  "name": "Multi LLM Hub",
  "version": "1.0",
  "description": "Interact with multiple LLMs from one interface - ChatGPT, Claude, Gemini, and more",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://chat.openai.com/*",
    "*://chatgpt.com/*",
    "*://claude.ai/*",
    "*://gemini.google.com/*",
    "*://bard.google.com/*",
    "*://chat.deepseek.com/*",
    "*://*.deepseek.com/*",
    "*://poe.com/*",
    "*://chat.mistral.ai/*",
    "*://chat.cohere.com/*",
    "*://coral.cohere.com/*",
    "*://grok.com/*",
    "*://you.com/*",
    "*://*.you.com/*",
    "*://perplexity.ai/*",
    "*://*.perplexity.ai/*",
    "*://character.ai/*",
    "*://replicate.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo/logo.png",
      "32": "logo/logo.png",
      "48": "logo/logo.png",
      "128": "logo/logo.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "logo/logo.png",
    "32": "logo/logo.png",
    "48": "logo/logo.png",
    "128": "logo/logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*",
        "*://claude.ai/*",
        "*://gemini.google.com/*",
        "*://bard.google.com/*",
        "*://chat.deepseek.com/*",
        "*://*.deepseek.com/*",
        "*://poe.com/*",
        "*://chat.mistral.ai/*",
        "*://chat.cohere.com/*",
        "*://coral.cohere.com/*",
        "*://grok.com/*",
        "*://you.com/*",
        "*://*.you.com/*",
        "*://perplexity.ai/*",
        "*://*.perplexity.ai/*",
        "*://character.ai/*",
        "*://replicate.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "options_page": "settings.html"
}